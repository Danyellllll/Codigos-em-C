#include <stdio.h>


int main () {

    double x, y, z, a;

    y = 0;
    z = 0;
    printf("Digite as idades: \n");
    scanf("%lf", &x);

    if (x < 0){
    printf("Impossivel Calcular");
   }

    while(x > 0){
    y = y + x;
    z = z + 1;
    scanf("%lf", &x);
   }

   a = y / z;
   if(z > 0){
    printf("Media = %.2lf", a);
   }


    return 0;
}

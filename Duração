#include <stdio.h>

int main ()
{


    int hr, min, seg, segundos, resto;

    printf("Digite a duracao em segundos: ");
    scanf("%d", &segundos);

    hr = segundos / 3600;
    resto = segundos % 3600;

    min = resto / 60;
    seg = resto % 60;

    printf("%d:%d:%d", hr, min, seg);

    return 0;
}
